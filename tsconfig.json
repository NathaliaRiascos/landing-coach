{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/atoms": [
        "src/components/atoms"
      ],
      "@/molecules": [
        "src/components/molecules"
      ],
      "@/organisms": [
        "src/components/organisms"
      ],
      "@/sections": [
        "src/components/sections"
      ]
    }
  }
}