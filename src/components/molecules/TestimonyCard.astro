---
import { Stars } from "../atoms";
import ProfileCard from "./ProfileCard.astro";

interface Props {
  desc: string;
  service: string;
  personName: string;
  imgURL: string;
}
const { desc, service, personName, imgURL } = Astro.props;
---

<article
  class="flex flex-col justify-between gap-3 rounded-xl bg-white p-5 shadow-sm"
>
  <h2 class="sr-only">Rese√±a de {personName}</h2>
  <div class="flex flex-col gap-3">
    <Stars />
    <blockquote class="mb-6 text-sm italic">
      "{desc}"
    </blockquote>
  </div>

  <ProfileCard url={imgURL} name={personName} desc={service} />
</article>
